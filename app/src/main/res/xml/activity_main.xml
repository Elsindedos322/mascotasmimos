<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consejos y Cuidados 🐾"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Sección de consejos para perros -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perros 🐕"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Alimentación: Proporciónales alimentos de calidad según su tamaño y edad. Evita darles chocolate, uvas o cebolla."
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Vacunas: Mantén al día su cartilla de vacunación para prevenir enfermedades."
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Paseos: Sácalos a pasear al menos dos veces al día. Es vital para su salud física y mental."
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Higiene: Báñalos una vez al mes y cepilla su pelaje regularmente."
            android:layout_marginBottom="16dp" />

        <!-- Repite bloques similares para Gatos y Conejos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gatos 🐈"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Alimentación: Alimenta a tu gato con comida balanceada, evitando alimentos humanos."
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Vacunas: Asegúrate de que reciba vacunas esenciales como la antirrábica."
            android:layout_marginBottom="4dp" />

        <!-- Puedes continuar con más contenido aquí -->
    </LinearLayout>
</ScrollView>
